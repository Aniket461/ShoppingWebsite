<style type="text/css">
	.details{
		margin-top: 15px;
		margin-left: 20px;
		overflow: hidden;
    padding-top: 0px;
	}
	.details h6{
		margin-bottom: 0px;
	}

	.keep{
		text-decoration: none;
	}
	.keep button{
		width: 160px;
		display: flex;justify-content: center;
		height: 50px;
		background-color: white;
		color: black;
		font-size: 17px;
		font-weight: 600;
		border: 2px solid black;
		border-radius: 5px;
	}
	.keep button i{
		font-size: 24px;
		margin-right: 5px;
	}
	.keep button:hover{
		background-color: black;
		color: white;
	}
	.image{
		width: 180px;height: 180px;
		border-radius: 10px; float: left; margin-right: 20px;
	}

	.outer{
		padding-bottom: 25px;
		padding-top: 25px;
	}

@media screen and (max-width: 800px){
		.image{
			width: 120px;
			height: 120px;
			margin-right: 0px;
			margin-top: 4px;
		}
			.outer{
		padding-bottom: 10px;
		padding-top: 10px;
	}

		.details{
			margin-left: 5px;
			margin-top: 0px;
		}
		.details p{
			margin-bottom: 2px;
		}
	}

</style>

</head>

<body>


	<div class="err" style="width: 70%;margin-left: 15%; margin-top: 30px; text-align: center;">
<% if(messages.error || messages.info) { %>

<% if(messages.error) {%>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong><%= messages.error %> </strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>
<% if(messages.info) {%>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong><%= messages.info %> </strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %>


<% } %>
</div>

<h5 style="width: 80%;
    text-align: center;
    margin-left: 10%;">Hi <%= user %>, Thank you for purchasing with us!!</h5>

<h6 style="text-align: center;">Your order is as follows:</h6>

<p><% for (var i =0; i < products.length;  i++ ) { %>

<div style="display: flex; justify-content: center;margin-left: auto;margin-right: auto; " class="outer">
	<div style="overflow: hidden; float: left;">
<img style="" class="image" src="./uploads/<%= JSON.parse(JSON.stringify(products[i])).image%>" >
</div>
<div class="details">
<h6>Product id:</h6><p><%= JSON.parse(JSON.stringify(products[i])).id %></p>
<h6>Product Qty:</h6><p><%= JSON.parse(JSON.stringify(products[i])).qty %></p>
<h6>Product price:</h6><p><i class="fa fa-inr"  aria-hidden="true" style="margin-right: 1px;"></i><%= JSON.parse(JSON.stringify(products[i])).price %></p>
</div>
</div>
<% } %></p>

<div style="overflow: hidden;text-align: center;display: flex;
    justify-content: center;margin-bottom: 50px;">
<a href="/" class="keep" style="text-decoration: none;"><button><i class="fa fa-shopping-basket" aria-hidden="true"></i>Keep Shopping</button></a>
</div>
</body>
</html>