<body>


<section class="mnavbar">
    
<div id="myNav" class="overlay">

  <!-- Button to close the overlay navigation -->
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

  <!-- Overlay content -->
  <div class="overlay-content">
    <a href="/" onclick="closeNav()">Home</a>
    <a href="/about" onclick="closeNav()">About</a>
    <a href="/contact" onclick="closeNav()">Contact</a>
    <a href="/orders" onclick="closeNav()">My Orders</a>

            <% if(user == ''){ %>
            <a href="/login"><button class="inb">LOGIN</button></a>
            <%} else {%>
              <p style="color: white; margin-top: 0px;margin-bottom: -15px;font-size: 20px; font-weight: 500;">Hi,<%= user %></p><a href="/logout"><button class="inb">LOGOUT</button></a>
              <%}%>
            
  </div>

</div>

<!-- Use any element to open/show the overlay navigation menu -->
<span onclick="openNav()" style="cursor: pointer;"><i id="ham" class="ham fa fa-bars" aria-hidden="true" style="font-size: 40px; margin: 15px; margin-top: 10px; color: rgba(0,0,0, 0.9); position: fixed;"></i></span>
</section>



    <nav>
        <div class="logo"><h4>LOGO</h4></div>
        <ul style="margin-bottom: 0px;">
            <a href="/" style="text-decoration: none;"><li>Home</li></a>
            <a href="/about" style="text-decoration: none;"><li>About</li></a>
            <a href="/contact" style="text-decoration: none;"><li>Contact</li></a>
            <a href="/orders" style="text-decoration: none;"><li>My Orders</li></a>

        </ul>
        <div class="login">
           <% if(user == ''){ %>
            <a href="/login"><button>LOGIN</button></a>
            <%} else {%>
              <a href="/userprofile" style="text-decoration: none;width: 120px;"><p style="color: white; margin-top: 13px;font-size: 20px; font-weight: 500; margin-right: 15px;">Hi,<%= user %></p></a><a href="/logout"><button>LOGOUT</button></a>
              <%}%>
            
            <a href="/cart" class="cart"><h5><i class="fa fa-shopping-cart" aria-hidden="true"></i>Cart</h5><div class="countout"><h6 class="count" style="margin-bottom: 3px;"><%= cartcount %></h6></div></a>
        </div>
    </nav>

<% if(orders.length == 0){%>
	
	<h3 style="text-align: center; padding-top: 70px;">
		You have no orders yet!! Keep Shopping.
	</h3>

<%} else{%>


    <h3 style="text-align: center; padding-top: 70px;margin-bottom: 50px;">Hey <%= user %>, Your orders look like this!!</h3>

<%orders.forEach(function(order){ %>
	

	<div class="orderOut">
		<div><div class="in" style="margin-bottom: 10px;">
		<img src="./uploads/<%= order.image %>">
		</div>
		<div class="inn" style="overflow: hidden;">
			<div><h6>Order Id:</h6>
			<p><%= order._id %></p></div>
			<!-- <div><h6>product Id:</h6>
			<p><%= order.productId %></p></div> -->
			<div class="into1" ><h6>Quantity:</h6>
			<p><%= order.quantity %></p></div>
			<div class="into2"><h6>Price:</h6>
			<p><i class="fa fa-inr"  aria-hidden="true" style="margin-right: 3px;"></i><%= order.price %></p></div>
			<div class="into1"><h6>Order Date:</h6>
			<p><%= order.placedDate %></p></div>
			<div class="into2"><h6>Delivery By:</h6>
			<p><%= order.deliveryDate %></p></div>
		</div>
	</div>
</div>

<% }); %>

<% } %>

</body>

<script>


/* Open when someone clicks on the span element */
function openNav() {
  document.getElementById("myNav").style.width = "100%";
  document.getElementById("ham").style.visibility = 'hidden';
}

/* Close when someone clicks on the "x" symbol inside the overlay */
function closeNav() {
  document.getElementById("myNav").style.width = "0%";
  document.getElementById("ham").style.visibility = 'visible';
}

</script>

