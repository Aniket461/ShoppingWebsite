}

.product a{
	text-decoration: none;
	color: black;
}

.product a button{
	font-size: 18px;
	font-weight: 600;
	background-color: white;
}
.product a button:hover{
	background-color: black;
	color: white;
}

.thumbnails img{
	margin-right: 5px;
